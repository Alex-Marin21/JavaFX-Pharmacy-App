<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="450.0" spacing="20.0" style="-fx-background-color: #f0f2f5; -fx-padding: 30;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.farmaciebdproiect.LoginController">
    <children>
        <VBox alignment="CENTER" maxWidth="400.0" minWidth="300.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10;">
            <children>
                <Label text="Autentificare Farmacie" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="numeField" maxWidth="280.0" prefHeight="35.0" promptText="Nume utilizator" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="parafaField" maxWidth="280.0" prefHeight="35.0" promptText="Cod Parafa" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <Button fx:id="loginButton" maxWidth="280.0" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="40.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Login">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Label fx:id="mesajLabel" maxWidth="280.0" textFill="RED" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                    </VBox.margin>
                </Label>
            </children>
            <effect>
                <DropShadow color="#00000033" height="15.0" radius="7.0" width="15.0" />
            </effect>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</VBox>
